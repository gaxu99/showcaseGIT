<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog
		title="{i18n>ZZ_CUSTOMER_HELP}"
		class="sapUiPopupWithPadding"
		items="{HelpProduct>/ProductInfo}"
		search="_handleValueHelpSearch"
		confirm="_handleValueHelpClose"
		cancel="_handleValueHelpClose">
		<StandardListItem
			title="{HelpProduct>productID}"
			description="{HelpProduct>productName}" />
	</SelectDialog>
</core:FragmentDefinition>